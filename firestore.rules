rules_version = '2';

function isSignedIn() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function getUserData() {
  return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
}

function isPlusSubscriber() {
  let userData = getUserData();
  return isSignedIn() && userData.subscription.plan == 'plus';
}

function isAdmin() {
  return request.auth != null && request.auth.token.email == 'amentoriaacademy@gmail.com';
}

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    match /users/{userId}/{collection}/{docId} {
      allow read, write, list: if isOwner(userId) || isAdmin();
    }

    match /questoes/{questionId} {
      allow read, list: if resource.data.accessTier == 'standard' || isPlusSubscriber() || isAdmin() || resource.data.accessTier == null;
      allow write: if isSignedIn(); 
    }
    
    match /questoes/{questionId}/comments/{commentId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow update: if false;
    }

    match /flashcards/{flashcardId} {
      allow read, list: if resource.data.accessTier == 'standard' || isPlusSubscriber() || isAdmin() || resource.data.accessTier == null;
      allow write: if isSignedIn();
    }
    
    match /communitySimulados/{simuladoId} {
       allow read: if resource.data.accessTier == 'standard' || isPlusSubscriber() || isAdmin() || resource.data.accessTier == null;
       allow list: if isSignedIn();
       allow create: if isSignedIn();
       allow update: if false;
       allow delete: if isAdmin();
    }
    
    match /previousExams/{examId} {
      allow read: if isAdmin() || isPlusSubscriber() || resource.data.accessTier == 'standard' || resource.data.accessTier == null;
      allow list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /feed_posts/{postId} {
      allow read: if resource.data.active == true && 
                    (resource.data.targetTier == 'all' || 
                     resource.data.targetTier == 'standard' ||
                     (resource.data.targetTier == 'plus' && isPlusSubscriber()));
      allow list: if isSignedIn(); // Allow listing for all signed-in users, client will filter
      allow write, update, delete: if isAdmin();
    }
  }
}
