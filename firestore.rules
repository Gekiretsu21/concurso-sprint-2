rules_version = '2';

function isSignedIn() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own profile
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // User-specific data is only accessible by the owner
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Questions are public to any authenticated user
    match /questions/{questionId} {
      allow read, write: if isSignedIn(); 
    }
    
    // Any authenticated user can read the community simulados.
    match /communitySimulados/{document=**} {
       allow read: if isSignedIn();
    }

    // Creating community simulados is allowed for signed in users
    match /communitySimulados/{simuladoId} {
       allow create: if isSignedIn();
       // Updates and deletes are disallowed to maintain integrity.
       allow update, delete: if false;
    }
  }
}
