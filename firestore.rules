rules_version = '2';

function isSignedIn() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

// Placeholder for admin logic. We will implement this later.
function isAdmin() {
  // return request.auth.token.admin == true;
  return false; // By default, no one is an admin for safety.
}

service cloud.firestore {
  match /databases/{database}/documents {

    // User data is private.
    // An admin can read anyone's profile for management purposes.
    // A user can read and write their own profile.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    // Only admins can list all users.
     match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // User-specific subcollections are only accessible by the owner.
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Questions are public to any authenticated user for reading.
    // Writing/creating should probably be restricted to admins in the future.
    match /questoes/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // Only admins can create/update questions
    }
    
    // Community simulados can be read by any authenticated user.
    // Any authenticated user can create a community simulado.
    // Updates/deletes are disallowed to maintain integrity.
    match /communitySimulados/{simuladoId} {
       allow read, create: if isSignedIn();
       allow update, delete: if false;
    }
  }
}
