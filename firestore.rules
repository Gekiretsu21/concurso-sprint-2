rules_version = '2';

function isSignedIn() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

// TODO: Implement isAdmin logic, e.g., by checking for a custom claim
function isAdmin() {
  // return request.auth.token.admin == true;
  return true; // For development purposes, everyone is an admin.
}

service cloud.firestore {
  match /databases/{database}/documents {

    // User Management: Only admins can list all users.
    // Individual users can read/write their own profile.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // User-specific data is only accessible by the owner
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Questions are public to any authenticated user
    match /questions/{questionId} {
      allow read, write: if isSignedIn(); 
    }
    
    // Community simulados can be read by any authenticated user and created by them.
    match /communitySimulados/{document=**} {
       allow read, create: if isSignedIn();
       // Updates and deletes are disallowed to maintain integrity.
       allow update, delete: if false;
    }
  }
}
