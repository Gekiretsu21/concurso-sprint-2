rules_version = '2';

function isSignedIn() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

// Placeholder for admin logic. We will implement this later.
function isAdmin() {
  return request.auth != null && request.auth.token.email == 'amentoriaacademy@gmail.com';
}

service cloud.firestore {
  match /databases/{database}/documents {

    // User data is private.
    // An admin can read anyone's profile for management purposes.
    // A user can read and write their own profile.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    // Only admins can list all users.
     match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // User-specific subcollections are only accessible by the owner.
    // This now explicitly includes 'list' for collections like flashcards.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, list: if isOwner(userId);
    }

    // Questions are public to any authenticated user for reading and writing.
    match /questoes/{questionId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn(); 
    }

    // Flashcards are public to any authenticated user for reading and writing.
    match /flashcards/{flashcardId} {
      allow read, write: if isSignedIn();
    }
    
    // Community simulados can be read by any authenticated user.
    // Any authenticated user can create a community simulado.
    // Only admins can delete community simulados.
    match /communitySimulados/{simuladoId} {
       allow read, create: if isSignedIn();
       allow update: if false;
       allow delete: if isAdmin();
    }
    
    // Previous exams are public to any authenticated user.
    // Only admins or specific logic should write to this. For now, open read.
    match /previousExams/{examId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn(); // Or restrict to admin
    }
  }
}

    